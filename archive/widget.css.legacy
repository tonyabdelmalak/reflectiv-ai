/* =====================================================
   ReflectivAI Chat Widget Styles
   ===================================================== */

.cw, .reflectiv-chat {
  font-family: "Poppins", sans-serif;
  color: #0f1522;
}

/* ---------- Widget Shell ---------- */
.reflectiv-chat {
  display: flex;
  flex-direction: column;
  gap: 8px;
  border: 1px solid #d6dbe3;
  border-radius: 12px;
  overflow: hidden;
  background: #fff;
}

/* ---------- Toolbar ---------- */
.chat-toolbar {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px;
  align-items: end;
  padding: 10px;
  background: #f7f9fc;
  border-bottom: 1px solid #e5e9f0;
}

/* ---------- Scenario / Dropdown Controls ---------- */
.sim-controls {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 8px 12px;
  align-items: end;
}

.sim-controls label {
  font-size: 12px;
  font-weight: 600;
  color: #2f3a4f;
}

.sim-controls .select {
  height: 36px;
  padding: 6px 8px;
  border-radius: 8px;
  border: 1px solid #cfd6df;
  background: #fff;
  font-size: 14px;
  color: #0f1522;
}

/* ---------- Chat Area ---------- */
.chat-messages {
  height: 320px;
  max-height: 50vh;
  overflow: auto;
  padding: 12px;
  background: #fafbfd;
}

/* ---------- Message Bubbles ---------- */
.message {
  margin: 8px 0;
  display: flex;
}

.message.user {
  justify-content: flex-end;
}

.message.assistant {
  justify-content: flex-start;
}

.message .content {
  max-width: 85%;
  border-radius: 14px;
  padding: 10px 12px;
  border: 1px solid #d6dbe3;
  line-height: 1.45;
  font-size: 14px;
  background: #e9edf3;
  color: #0f1522;
}

.message.user .content {
  background: #e0e0e0;
  color: #000;
}

/* ---------- Input Area ---------- */
.chat-input {
  display: flex;
  gap: 8px;
  padding: 10px;
  border-top: 1px solid #e5e9f0;
  background: #fff;
}

.chat-input textarea {
  flex: 1;
  resize: none;
  min-height: 44px;
  max-height: 120px;
  padding: 10px 12px;
  border: 1px solid #cfd6df;
  border-radius: 10px;
  outline: none;
  font-family: "Poppins", sans-serif;
  font-size: 14px;
}

.chat-input .btn {
  min-width: 84px;
  border: 0;
  border-radius: 999px;
  background: #2f3a4f;
  color: #fff;
  font-weight: 600;
  cursor: pointer;
}

.chat-input .btn:hover {
  background: #394768;
}

/* ---------- Meta (Scenario Background) ---------- */
.scenario-meta .meta-card {
  padding: 10px 12px;
  background: #f7f9fc;
  border: 1px solid #e5e9f0;
  border-radius: 10px;
  font-size: 13px;
  line-height: 1.4;
}

/* ---------- Coach Feedback ---------- */
.coach-section {
  margin-top: 10px;
  padding: 12px;
  border: 1px solid #e5e9f0;
  border-radius: 12px;
  background: #fffbe8;
}

.coach-section h3 {
  font-size: 15px;
  margin: 0 0 6px 0;
  color: #2f3a4f;
}

.coach-score {
  margin-bottom: 8px;
  font-weight: 600;
}

.coach-subs .pill {
  display: inline-block;
  background: #f1f3f7;
  border: 1px solid #d6dbe3;
  border-radius: 999px;
  padding: 2px 8px;
  margin-right: 6px;
  font-size: 12px;
}

.coach-list {
  padding-left: 16px;
  font-size: 13px;
  color: #0f1522;
}

.coach-list li {
  margin-bottom: 4px;
}

/* ---------- Responsive ---------- */
@media (max-width: 520px) {
  .chat-messages {
    height: 46vh;
  }
  .chat-toolbar {
    grid-template-columns: 1fr;
  }
  .sim-controls {
    grid-template-columns: 1fr;
  }
}
